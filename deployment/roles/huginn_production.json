{

"name" : "huginn_production",

"chef_type" : "role",

"json_class" : "Chef::Role",

"description" : "Huginn Production Environment",

"default_attributes" : {
    "postgresql": {
        "password": {
            "postgres": "password"
        }
    },
    "nginx" : {
        "init_style" : "upstart"
    }
